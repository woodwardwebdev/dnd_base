<%include ../partials/header%>

<div class = 'container playertile'>
    <h5>Character Details</h5>
    <ul>
        <li>Player Name: <%=pc.playername%></li>
        <li>Character name: <%=pc.charactername%></li>
        <li>Race: <%=pc.race%></li>
    </ul>
    <h5>Character Stats</h5>
    <table class = 'table stat-table'>
    <tr>
        <th>STR</th>
        <th>DEX</th>
        <th>CON</th>
        <th>INT</th>
        <th>WIS</th>
        <th>CHA</th>
    </tr>
    <tr>
        <td><%=pc.strength%></td>
        <td><%=pc.dexterity%></td>
        <td><%=pc.constitution%></td>
        <td><%=pc.intelligence%></td>
        <td><%=pc.wisdom%></td>
        <td><%=pc.charisma%></td>
    </tr>
    </table>
    <div class="row">
        <div class="col-12">
            <h5>Owned Items</h5>
            <% let i = 1 %>
            <%pc.items.forEach(function(item){ %>
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal<%=i%>">
            <%=item.name%>
            </button>
            <!-- Modal -->
            <div class="modal fade" id="Modal<%=i%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"><%=item.name%></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <%=item.description%>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
                </div>
            </div>
            </div>
            <%i = i+1%>
           <% }) %>
        </div>
    </div>
    <form action = '/pcs/<%=pc._id%>?_method=DELETE' method = 'POST'>
    <button type = 'submit' class = 'btn btn-danger'>Delete</button>
    </form>
</div>


<%include ../partials/footer%>
